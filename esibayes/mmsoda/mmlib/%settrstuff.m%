function settrstuff(mpirank)

if mpirank==0
    if exist('trsettings.mat')
        load('trsettings.mat');
        disp('Loading task-result server setting from trsettings.mat')
        trsettings
    else
        trsettings.gettask_delay=5;
        trsettings.serverfile='trserver.mat';
        trsettings.restart_delay=300;
        %save('trsettings.mat','trsettings');
        disp('No trsettings.mat found - using defaults')
        trsettings
    end
else
    %trsettings=0;
end

trsettings=bcastvar(0,trsettings);
assignin('base','trsettings',trsettings);
